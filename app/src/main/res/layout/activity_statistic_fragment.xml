<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soft.eternal.corejavapro.StatisticFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stat"
            >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Average of all Mock Tests"
        android:id="@+id/heading"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        />
    <com.soft.eternal.corejavapro.BarGraph
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/heading"
        android:padding="40dp"
        android:id="@+id/graph"
         />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/graph"
                android:text="Damn !! You have not attempted any test !"
                android:id="@+id/not"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:paddingTop="20dp"
                />
    <GridLayout
        android:layout_below="@+id/not"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="9"
        android:id="@+id/grid"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/green"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/green"
        android:layout_gravity="left|top"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left"
            android:text="1. Java Basics"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            />
        <ImageView
            android:id="@+id/orabge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/orange"
            android:layout_gravity="left|top"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left"
            android:text="2. Java Data Types"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            />
        <ImageView
            android:id="@+id/purple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/purple"
            android:layout_gravity="left|top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left"
            android:text="3. Operators &amp; Decision Constructs"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            />
        <ImageView
            android:id="@+id/brown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/brown"
            android:layout_gravity="left|top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left"
            android:text="4. Creating &amp; Using Arrays"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            />
        <ImageView
            android:id="@+id/grey"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/grey"
            android:layout_gravity="left|top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left"
            android:text="5. Loop Constructs"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            />
        <ImageView
            android:id="@+id/yellow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/yellow"
            android:layout_gravity="left|top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left"
            android:text="6. Methods &amp; Encapsulation"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            />
        <ImageView
            android:id="@+id/pink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pink"
            android:layout_gravity="left|top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left"
            android:text="7. Inheritance"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            />
        <ImageView
            android:id="@+id/blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/skyblue"
            android:layout_gravity="left|top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left"
            android:text="8. Handling Exceptions"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            />
        <ImageView
            android:id="@+id/red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/red"
            android:layout_gravity="left|top"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="left"
            android:text="9. Selected classes from the Java API"
            android:textStyle="bold"
            android:layout_gravity="left|center_vertical"
            />

    </GridLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>