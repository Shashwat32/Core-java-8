<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:text="Congratulations !! You have reached the end of test."
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/question_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:textSize="16sp"
        android:gravity="left"

        android:text="Use the review button to review the marked question.When you are done use the Submit button below to submit the answer. "

        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        >




        <Button

            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/review"
            android:layout_marginRight="10dp"
            android:background="@drawable/review_button"
            />

        <Button

            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/submit"
            android:layout_marginRight="10dp"
            android:background="@drawable/submit_button"

            />
    </LinearLayout>

</LinearLayout>